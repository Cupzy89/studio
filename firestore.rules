rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Schema Validation Functions ---
    function isValidUserOnCreate(data) {
      return data.id == request.auth.uid
        && data.username is string && data.username.size() > 0
        && data.email is string && data.email.matches('.+@.+\\..+')
        && data.registrationDate == request.time;
    }
    
    function isImmutableUserFields(data) {
        return data.id == resource.data.id
            && data.email == resource.data.email
            && data.registrationDate == resource.data.registrationDate;
    }

    function isValidRoll(data) {
        return data.name is string && data.name.size() > 0
            && data.type is string && data.type.size() > 0
            && data.quantity is number
            && data.rollCount is number;
    }

    // --- Rules ---
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Deny listing all users for privacy
      allow create: if isOwner(userId) && isValidUserOnCreate(request.resource.data);
      allow update: if isOwner(userId) && isImmutableUserFields(request.resource.data);
      allow delete: if isOwner(userId);

      match /rolls/{rollId} {
        allow read, list: if isOwner(userId);
        allow create: if isOwner(userId) && isValidRoll(request.resource.data);
        allow update: if isOwner(userId) && isValidRoll(request.resource.data);
        allow delete: if isOwner(userId);
      }
    }
  }
}
